# Regendary Bets Environment Configuration
# Copy this file to .env and fill in your values

# ===== Telegram Bot Configuration =====
BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890
MINI_APP_URL=https://your-domain.tld

# ===== FHE Backend Configuration =====
FHE_SERVER_PORT=3000
FHE_SERVER_HOST=0.0.0.0

# ===== TON Configuration =====
TON_NETWORK=testnet
TON_CONTRACT_ADDRESS=
TON_OWNER_WALLET=
TON_PRIVATE_KEY=
TON_PAYER_KEY=

# ===== Database Configuration =====
DATABASE_URL=sqlite://./data/regendary.db
REDIS_URL=redis://localhost:6379

# ===== API Keys and URLs =====
TONCENTER_API_KEY=
TONSCAN_API_KEY=

# ===== Server Configuration =====
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
LOG_FILE=./logs/regendary.log

# ===== FHE Encryption Configuration =====
ENCRYPTION_SCHEME=tfhe
KEY_SIZE=2048
SEED_LENGTH=256

# ===== Market Configuration =====
MIN_MARKET_RESOLUTION_TIME=3600
MAX_MARKET_OUTCOMES=10
MIN_BET_AMOUNT=0.1
TRANSACTION_FEE_PERCENTAGE=1

# ===== Rate Limiting =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000

# ===== Webhook Configuration =====
WEBHOOK_URL=https://your-domain.tld/webhook
WEBHOOK_SECRET=your-webhook-secret-here

# ===== Notification Channels =====
TELEGRAM_ADMIN_CHAT_ID=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# ===== Network Endpoints =====
TON_ENDPOINT_TESTNET=https://testnet.toncenter.com/api/v2/jsonRPC
TON_ENDPOINT_MAINNET=https://toncenter.com/api/v2/jsonRPC
